{
  "manifest_version": 3,
  "name": "SafeRoads",
  "version" : "1.0",
  "content_scripts": [
    {
      "matches" : ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": "logo.png",
    "default_popup": "popup.html"
  },
  "permissions": ["activeTab", "scripting"]
}